<!--pages/we/editInfo.wxml-->
<form bindsubmit="bindSubmit">
  <view class="cu-form-group margin-top">
				<view class="title">昵称</view>
				<input placeholder="" name="nickName" value="{{user.nickName}}"></input>
			</view>
			<view class="cu-form-group">
				<view class="title">手机号码</view>
				<input placeholder="" name="phone"></input>
      </view>
      <view class="cu-form-group">
				<view class="title">邮箱</view>
				<input placeholder="绑定邮箱可以收到对方的消息提醒哦" name="email"></input>
			</view>
  
		<view class="padding flex flex-direction">
			<button class="cu-btn bg-gradual-red lg" form-type="submit">确认修改</button>
		</view>
</form>

<van-toast id="van-toast" />