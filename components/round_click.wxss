/* components/round_click.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.round-click{
  height: 100rpx;
  width: 100rpx;
  background-color: #FF99CC;
  border-radius: 100%;
  position: fixed;
  bottom: 150rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9;
}
.round-click text{
  font-size: 70rpx;
  max-width: 80rpx;
  color: #fff;
  margin-top: 1rpx;
  text-align: center;
}